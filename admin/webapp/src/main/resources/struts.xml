<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.inca.package.locators" value="org.meruvian.yama, net.bogor.itu.action" />
	<constant name="struts.inca.default.parent.package" value="yama-default" />

	<package name="yama-default" extends="struts-default">
		<interceptors>
			<interceptor-stack name="adminStack">
				<interceptor-ref name="exception" />
				<interceptor-ref name="logger" />
				<interceptor-ref name="timer" />
				<interceptor-ref name="alias" />
				<interceptor-ref name="servletConfig" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="scopedModelDriven" />
				<interceptor-ref name="modelDriven" />
				<interceptor-ref name="fileUpload" />
				<interceptor-ref name="checkbox" />
				<interceptor-ref name="multiselect" />
				<interceptor-ref name="staticParams" />
				<interceptor-ref name="actionMappingParams" />
				<interceptor-ref name="params">
					<param name="excludeParams">dojo\..*,^struts\..*</param>
				</interceptor-ref>
				<interceptor-ref name="store">
					<param name="operationMode">AUTOMATIC</param>
				</interceptor-ref>
				<interceptor-ref name="conversionError" />
				<interceptor-ref name="validation">
					<param name="validateAnnotatedMethodOnly">true</param>
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>
				<interceptor-ref name="workflow">
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="adminStack" />
		<default-class-ref class="org.meruvian.yama.actions.DefaultAction" />

		<global-results>
			<result name="login" type="redirect">/logout</result>
			<result name="home" type="redirect">/home</result>
		</global-results>

		<!-- Handle 404 -->
		<!-- <action name="{all}"> -->
		<!-- <result type="freemarker">/WEB-INF/page/404.ftl</result> -->
		<!-- </action> -->
	</package>

	<include file="struts-yama.xml" />
</struts>
